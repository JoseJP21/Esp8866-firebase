#include <ESP8266WiFi.h>
#include <FirebaseArduino.h>

#define FIREBASE_HOST "********.firebaseio.com"
#define FIREBASE_AUTH "**********************"
#define WIFI_SSID "RedWiffi"
#define WIFI_PASSWORD "contrase√±a"
  //asignacion de pines

#define led1 16
#define led2 5
#define led3 4
#define led4 2
#define sensor 14
int valor = 0;
void setup() {
  Serial.begin(115200);
  WiFi.begin(WIFI_SSID, WIFI_PASSWORD);
  Serial.print("connecting");
  while (WiFi.status() != WL_CONNECTED) {
    Serial.print(".");
    delay(500);

    }
  Serial.println();
  Serial.print("connected: ");
  Serial.println(WiFi.localIP());
  Firebase.begin(FIREBASE_HOST, FIREBASE_AUTH);
  //declaracion de pines
  pinMode(led1,OUTPUT);
  pinMode(led2,OUTPUT);
  pinMode(led3,OUTPUT);
  pinMode(led4,OUTPUT);
  pinMode(sensor,INPUT);
}
int n = 0;

void loop() {
 if(Firebase.getFloat("led1"))
 {digitalWrite(led1, HIGH);}
else { digitalWrite(led1, LOW);}

 if(Firebase.getFloat("led2"))
 {digitalWrite(led2, HIGH);}
else { digitalWrite(led2, LOW);}

 if(Firebase.getFloat("led3"))
 {digitalWrite(led3, HIGH);}
else { digitalWrite(led3, LOW);}

 if(Firebase.getFloat("led4"))
 {digitalWrite(led4, HIGH);}
else { digitalWrite(led4, LOW);}

//lectura del sensor
valor = digitalRead(sensor);
  Firebase.setFloat("sensor_de_luz", valor);
  // handle error
  if (Firebase.failed()) {
      Serial.print("setting /sensor_de_luz failed:");
      Serial.println(Firebase.error());  
      return;
  }
  Serial.print("valorSensor: ");
  Serial.println(Firebase.getFloat("sensor_de_luz"));
  /*
    String name = Firebase.pushInt("logs", n++);
  // handle error
  if (Firebase.failed()) {
      Serial.print("pushing /logs failed:");
      Serial.println(Firebase.error());  
      return;
  }
  Serial.print("pushed: /logs/");
  Serial.println(name);
  delay(1000);*/
}
